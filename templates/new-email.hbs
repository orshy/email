<h2>New Email</h2>

<form>
  <div class="form-group">
    <label for="to">To:</label>
    {{input value=to id="to" class="form-control" autofocus="autofocus"}}
    <label for="subject">Subject:</label>
    {{input value=subject id="subject" class="form-control"}}
    <label for="email">Email:</label>
    {{textarea value=email id="email" class="form-control" rows="5"}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Send Email</button>
</form>
